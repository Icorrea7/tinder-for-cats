<div class="container mx-auto max-h-screen my-8">
  <%= link_to '<- More Cats', cats_path, class: "text-violet-700 focus:outline-none text-sm px-4 py-2 cursor-pointer" %>
  <div class="grid grid-cols-1 md:grid-cols-5 rounded-lg border border-gray-300 w-full h-full mt-12">
    <div class="md:col-span-3 aspect-w-3 aspect-h-2 overflow-hidden rounded-lg">
      <img src="<%= url_for(@cat.avatar) %>" alt="Cat avatar" class="h-full w-full object-cover object-center">
    </div>
    <div class="md:col-span-2 bg-white px-5 flex flex-col items-center justify-center w-full h-full bg-violet-100">
      <h2 class="text-violet-800 text-4xl">
        <%= @cat.name %> <%= @cat.last_name %>
      </h2>
      <% if @cat.status.present? %>
        <p class="text-gray-700 mt-2 text-sm">
          <%= @cat.status.humanize %>
        </p>
      <% end %>
      <p class="text-gray-700 mt-2 text-sm">
        <%= @cat.email %>
      </p>
      <p class="text-gray-700 mt-2 text-sm">
        <%= @cat.phone %>
      </p>
      <div class="flex justify-between items-center mt-4 w-1/2 mx-auto">
        <%= link_to 'Edit', edit_cat_path(@cat), class: "rounded-full bg-violet-300 text-violet-700 focus:outline-none text-sm px-4 py-2 cursor-pointer" %>
        <%= link_to 'See history', cat_version_path(@cat), class: "rounded-full bg-orange-200 text-orange-600 text-white focus:outline-none text-sm px-4 py-2 cursor-pointer" %>
      </div>
    </div>
  </div>
</div>